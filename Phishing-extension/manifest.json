{
  "manifest_version": 3,
  "name": "CyberShield",
  "version": "1.0.0",
  "description": "Advanced phishing protection with ML-powered detection across websites, emails, and messaging platforms.",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "notifications",
    "webNavigation",
    "alarms"
  ],

  "host_permissions": [
    "https://*/*",
    "http://localhost/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["ml-detector.js", "url-blocker.js", "utils.js", "config.js", "error-handler.js", "content.js", "phishing-detector.js", "email-phishing-detector.js", "gmail-email-detector.js", "whatsapp-link-detector.js"],
      "run_at": "document_start"
    }
  ],

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "web_accessible_resources": [
    {
      "resources": ["warning.html", "dashboard.html", "dashboard.css"],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}